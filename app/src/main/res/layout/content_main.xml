<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bela.es2017.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/botao_busca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Busca"
            app:layout_constraintLeft_toLeftOf="@+id/botao_add_receita"
            app:layout_constraintTop_toBottomOf="@+id/botao_add_receita" />

        <Button
            android:id="@+id/botao_add_receita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="16dp"
            android:text="Adicionar Receitas"
            app:layout_constraintLeft_toLeftOf="@+id/botao_barras"
            app:layout_constraintTop_toBottomOf="@+id/botao_barras" />

        <Button
            android:id="@+id/botao_barras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="CÃ³digo de Barras"
            app:layout_constraintLeft_toLeftOf="@+id/botao_estoque"
            app:layout_constraintTop_toBottomOf="@+id/botao_estoque" />

        <Button
            android:id="@+id/botao_estoque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Estoque"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/botao_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Timer"
            app:layout_constraintLeft_toLeftOf="@+id/botao_busca_disponivel"
            app:layout_constraintTop_toBottomOf="@+id/botao_busca_disponivel" />

        <Button
            android:id="@+id/botao_busca_disponivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_row="2"
            android:text="Busca por receitas com ingredientes no estoque"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botao_tts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextToSpeech" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
