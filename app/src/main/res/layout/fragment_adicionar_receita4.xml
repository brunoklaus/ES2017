<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_receita.Fragment_adicionar_receita4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textitem_passo4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Passo 4. Informações adicionais"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/frag3_textView_tempo"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="19dp"
                android:text="Tempo de preparo (Opcional)"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textitem_passo4" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/frag3_editText_tempo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/frag3_editText_tempo"

                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/frag3_textView_tempo"
                app:layout_constraintTop_toBottomOf="@+id/frag3_textView_tempo">

                <EditText
                    android:id="@+id/frag3_entrada_tempo_etHora"
                    android:maxLength="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:hint="00"
                    android:imeOptions="actionDone"
                    android:inputType="numberSigned"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.51" />

                <TextView
                    android:id="@+id/frag3_entrada_tempo_textView_segundo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="s"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/frag3_entrada_tempo_etSegudo"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/frag3_entrada_tempo_textView_minuto"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:text="m"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/frag3_entrada_tempo_etMinuto"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/frag3_entrada_tempo_etSegudo"
                    android:maxLength="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:hint="00"
                    android:inputType="numberSigned"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/frag3_entrada_tempo_textView_minuto"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/frag3_entrada_tempo_etMinuto"
                    android:maxLength="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:hint="00"
                    android:inputType="numberSigned"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/frag3_entrada_textView_Hora"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/frag3_entrada_textView_Hora"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:text="h"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/frag3_entrada_tempo_etHora"
                    app:layout_constraintTop_toTopOf="parent"></TextView>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/frag3_textView_dificuldade"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="Dificuldade de preparo"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/frag3_textView_tempo"
                app:layout_constraintTop_toBottomOf="@+id/frag3_editText_tempo" />


            <Spinner
                android:id="@+id/frag3_editText_dificuldade"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Escolha dificuldade"
                app:layout_constraintLeft_toLeftOf="@+id/frag3_textView_dificuldade"
                app:layout_constraintTop_toBottomOf="@+id/frag3_textView_dificuldade" />

            <TextView
                android:id="@+id/frag3_textView_tags"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Tags"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frag3_editText_dificuldade" />

            <EditText
                android:id="@+id/frag3_editText_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:hint="Insira tags separadas por vírgula"
                android:inputType="textMultiLine"
                app:layout_constraintLeft_toLeftOf="@+id/frag3_textView_tags"
                app:layout_constraintTop_toBottomOf="@+id/frag3_textView_tags" />

            <TextView
                android:id="@+id/frag3_textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Porções (Opcional)"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frag3_editText_tags" />

            <EditText
                android:id="@+id/frag3_editText_porcoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:hint="Insira número de porções"
                android:inputType="numberSigned"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frag3_textView10" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</FrameLayout>
