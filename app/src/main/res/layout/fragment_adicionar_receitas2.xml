<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bela.es2017.Fragment_adicionar_receita2">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:text="Tempo de preparo"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.039"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editText_tempo"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView8"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/textView8"
            app:layout_constraintHorizontal_bias="0.0"
            android:hint="1h30m" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dificuldade de preparo"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_tempo"
            android:layout_marginRight="157dp"
            app:layout_constraintRight_toRightOf="@+id/editText_tempo"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/editText_tempo"
            app:layout_constraintHorizontal_bias="0.039" />

        <EditText
            android:id="@+id/editText_dificuldade"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Insira um nÃºmero de 1-10"
            android:inputType="number"
            app:layout_constraintHorizontal_bias="0.711"
            app:layout_constraintLeft_toLeftOf="@+id/textView9"
            app:layout_constraintRight_toRightOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
