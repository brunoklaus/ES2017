<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bela.es2017.Add_receita.Fragment_adicionar_receita2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textitem_passo2"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Passo 2. Adicione o modo de preparo:"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="4dp"
            android:text="Modo de preparo"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.037"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="254dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginRight="2dp"

            >

            <EditText
                android:id="@+id/editText_preparo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/item_adicionar_preparo"
                android:layout_gravity="left|center"
                android:layout_toLeftOf="@+id/editText_addclock"
                android:layout_toStartOf="@+id/editText_addclock"
                android:ems="10"
                android:text="aaaa" />

            <EditText
                android:id="@+id/editText_addclock"
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/ingr_clockcheckbox"
                android:layout_alignBottom="@+id/ingr_clockcheckbox"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/textView5"
                android:layout_toStartOf="@+id/textView5"
                android:ems="10"
                android:gravity="center"
                android:hint="tempo(s)"
                android:inputType="numberSigned"
                android:textSize="14sp"

                android:visibility="gone"
                app:layout_constraintHorizontal_bias="0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/item_adicionar_preparo"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toLeftOf="@+id/ingr_clockcheckbox"
                android:layout_toStartOf="@+id/ingr_clockcheckbox"
                android:gravity="center" />

            <CheckBox
                android:id="@+id/ingr_clockcheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/item_adicionar_preparo"
                android:layout_alignBottom="@+id/item_adicionar_preparo"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/item_adicionar_preparo"
                android:layout_toStartOf="@+id/item_adicionar_preparo"
                android:text="Clock"
                android:textSize="10sp" />

            <Button
                android:id="@+id/item_adicionar_preparo"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Add"

                android:textSize="10sp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/add_container_preparo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>
</FrameLayout>
