<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_livro_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Oi" />

            <TextView
                android:id="@+id/item_livro_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/item_livro_nome"
                android:text="TextView" />

            <TextView
                android:id="@+id/item_livro_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_livro_autor"
                android:text="TextView" />

            <TextView
                android:id="@+id/item_livro_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_livro_preco"
                android:text="TextView" />

            <ImageView
                android:id="@+id/item_livro_imagem"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="0dp"
                android:layout_alignRight="@+id/item_livro_descricao"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="59dp"
                android:layout_marginRight="59dp"
                app:srcCompat="@drawable/estudo_vermelho_sherlock" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>