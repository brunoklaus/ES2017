<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.klaus.es2017.CadastroIngredienteActivity"
    tools:showIn="@layout/activity_cadastro_ingrediente">

    <EditText
        android:id="@+id/ingredienteText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ingrediente"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="117dp"
        android:layout_above="@+id/quantidadeText"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/quantidadeText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Quantidade"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="205dp"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/marcaText"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/marcaText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Marca (opcional)"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="299dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_forms"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@mipmap/generic_icon"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="400dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp" />
</RelativeLayout>
